@model JoePizzaApp.Models.Order

@{
    ViewData["Title"] = "Order Confirmed";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlz9yVZhpNZF1OdxN+flMMJlBD4Xos8a9oXnTp3Qf4Cm1Z2qq7p0KJKd5t6
2yW+rw" crossorigin="anonymous">
    <style>
        /* Custom CSS styles */
        body {
            background-color: #f0f0f0;
        }

        .confirmation-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            margin: 20px auto;
            max-width: 600px;
        }

        .confirmation-title {
            text-align: center;
            color: #126328;
        }

        .confirmation-img {
            display: block;
            margin: 0 auto;
            max-width: 150px;
        }

        .order-details {
            margin-top: 20px;
        }

            .order-details h2 {
                color: #126328;
            }

            .order-details table {
                width: 100%;
                border-collapse: collapse;
                margin-top: 20px;
            }

                .order-details table th {
                    background-color: #126328;
                    color: #fff;
                    text-align: left;
                }

                .order-details table td, .order-details table th {
                    padding: 10px;
                    border: 1px solid #ccc;
                }

        .order-total {
            text-align: right;
            margin-top: 20px;
            font-weight: bold;
        }

        .confirmation-message {
            text-align: center;
            color: #28a745;
            margin-top: 20px;
        }
    </style>
</head>
<body >
    <div class="container mt-5 confirmation-container">
        <div class="text-center">
            <h1 class="display-6 confirmation-title">Thank You for Ordering!</h1>
        </div>

        <div class="order-details" id="order-details">
            <h2>Review Your order</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@orderDetail.Pizza.Name</td>
                            <td>Rs.@orderDetail.Price</td>
                            <td>@orderDetail.Quantity</td>
                            <td>Rs.@(orderDetail.Price * orderDetail.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="order-total" id="order-total">Total Price: Rs.@Model.OrderDetails.Sum(orderDetail => orderDetail.Price * orderDetail.Quantity)</div>
        </div>

        <p class="confirmation-message">Your order is confirmed and will reach you shortly.</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-MFk5booPq9zcp4Wv5nTzzzu5zRb0WxfjHH7Jc3l5cK1a3pgLw8C+Sb5X7f/kxMfjh
T" crossorigin="anonymous"></script>
</body>
</html>
